  <script>
    /* =========================
       LIGHTBOX (IMAGES)
    ========================== */
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.querySelector('.lightbox-img');
    const lightboxClose = document.querySelector('.lightbox-close');

    function closeLightbox() {
      if (!lightbox || !lightboxImg) return;
      lightbox.classList.remove('open');
      lightbox.setAttribute('aria-hidden', 'true');
      lightboxImg.src = '';
    }

    if (lightbox && lightboxImg) {
      document.querySelectorAll('.media-img.clickable').forEach(img => {
        img.addEventListener('click', () => {
          lightboxImg.src = img.dataset.full || img.src;
          lightbox.classList.add('open');
          lightbox.setAttribute('aria-hidden', 'false');
        });
      });

      lightboxClose?.addEventListener('click', closeLightbox);

      lightbox.addEventListener('click', (e) => {
        if (e.target === lightbox) closeLightbox();
      });
    }

    /* =========================
       DROPDOWN: hover desktop, click mobile
    ========================== */
    const dd = document.getElementById('normDropdown');
    const trigger = dd?.querySelector('.dropdown-trigger');
    const menu = dd?.querySelector('.dropdown-menu');

    const canHover = window.matchMedia('(hover: hover) and (pointer: fine)').matches;

    function setExpanded(isOpen) {
      if (!dd || !trigger) return;
      dd.classList.toggle('open', isOpen);
      trigger.setAttribute('aria-expanded', String(isOpen));
    }

    if (dd && trigger && menu) {
      if (!canHover) {
        trigger.addEventListener('click', (e) => {
          e.preventDefault();
          setExpanded(!dd.classList.contains('open'));
        });

        document.addEventListener('click', (e) => {
          if (!dd.contains(e.target)) setExpanded(false);
        });
      } else {
        dd.addEventListener('mouseenter', () => setExpanded(true));
        dd.addEventListener('mouseleave', () => setExpanded(false));
      }
    }

    /* =========================
       ESC closes lightbox + dropdown
    ========================== */
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeLightbox();
        setExpanded(false);
      }
    });

    /* =========================
       ACCORDION (multiple) + only one open at a time + animation
    ========================== */
    const accs = document.querySelectorAll('.acc');

    function setPanelHeight(accEl, isOpen) {
      const panel = accEl.querySelector('.acc-panel');
      if (!panel) return;
      panel.style.maxHeight = isOpen ? (panel.scrollHeight + 'px') : '0px';
    }

    function setAccOpen(accEl, isOpen) {
      const trg = accEl.querySelector('.acc-trigger');
      const panel = accEl.querySelector('.acc-panel');
      if (!trg || !panel) return;

      accEl.classList.toggle('open', isOpen);
      trg.setAttribute('aria-expanded', String(isOpen));
      panel.setAttribute('aria-hidden', String(!isOpen));

      setPanelHeight(accEl, isOpen);
    }

    function closeAll(exceptAcc = null) {
      accs.forEach(a => { if (a !== exceptAcc) setAccOpen(a, false); });
    }

    accs.forEach(accEl => {
      const trg = accEl.querySelector('.acc-trigger');
      if (!trg) return;

      setAccOpen(accEl, false);

      trg.addEventListener('click', () => {
        const isOpen = accEl.classList.contains('open');
        if (isOpen) {
          setAccOpen(accEl, false);
        } else {
          closeAll(accEl);
          setAccOpen(accEl, true);
        }
      });
    });

    window.addEventListener('resize', () => {
      accs.forEach(accEl => {
        if (accEl.classList.contains('open')) setPanelHeight(accEl, true);
      });
    });

    /* =========================
       Floating preview: follow cursor + gravitate to center
       - no overlay/backdrop
    ========================== */
    accs.forEach(accEl => {
      const previewWrap = accEl.querySelector('.acc-preview');
      const previewImg = accEl.querySelector('.acc-preview-img');
      const panel = accEl.querySelector('.acc-panel');
      if (!previewWrap || !previewImg) return;

      let raf = null;

      let x = window.innerWidth / 2;
      let y = window.innerHeight / 2;
      let s = 0.85;

      let tx = x, ty = y, ts = s;

      function clamp(v, a, b){ return Math.max(a, Math.min(b, v)); }

      function tick(){
        x += (tx - x) * 0.14;
        y += (ty - y) * 0.14;
        s += (ts - s) * 0.16;

        previewImg.style.left = x + 'px';
        previewImg.style.top  = y + 'px';
        previewImg.style.transform = `translate(-50%, -50%) scale(${s})`;

        raf = requestAnimationFrame(tick);
      }

      function startAnim(){
        if (raf) return;
        raf = requestAnimationFrame(tick);
      }

      function stopAnim(){
        if (!raf) return;
        cancelAnimationFrame(raf);
        raf = null;
      }

     function setTargetFromEvent(e){
  const cx = window.innerWidth / 2;
  const cy = window.innerHeight / 2;

  const mx = e.clientX;
  const my = e.clientY;

  let mixX = mx * 0.65 + cx * 0.35;
  let mixY = my * 0.55 + cy * 0.45;

  mixX += 90;
  mixY -= 140;

  tx = clamp(mixX, 120, window.innerWidth - 120);
  ty = clamp(mixY, 140, window.innerHeight - 140);
}


      function showPreview(src, e){
        if (!src) return;
        previewImg.src = src;
        previewWrap.classList.add('is-visible');

        x = e?.clientX ?? (window.innerWidth / 2);
        y = e?.clientY ?? (window.innerHeight / 2);
        s = 0.70;

        ts = 1.00;
        setTargetFromEvent(e || { clientX:x, clientY:y });

        startAnim();
      }

      function hidePreview(){
        previewWrap.classList.remove('is-visible');
        previewImg.src = '';
        stopAnim();
      }

      accEl.querySelectorAll('.acc-item').forEach(item => {
        const src = item.dataset.img;

        item.addEventListener('mouseenter', (e) => showPreview(src, e));
        item.addEventListener('mousemove', (e) => {
          if (!previewWrap.classList.contains('is-visible')) return;
          setTargetFromEvent(e);
        });
        item.addEventListener('mouseleave', hidePreview);

        item.addEventListener('click', (e) => {
          if (previewWrap.classList.contains('is-visible')) {
            hidePreview();
          } else {
            showPreview(src, e);
          }
        });
      });

      panel?.addEventListener('mouseleave', hidePreview);

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') hidePreview();
      });
    });
  </script>

